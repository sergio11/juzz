<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Notificaciones" table="notificaciones">
    <indexes>
      <index name="NOT_FK" columns="target_id"/>
    </indexes>
    <id name="id" type="bigint" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="fecha" type="datetime" column="fecha" nullable="false"/>
    <field name="tipo" type="string" column="tipo" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="vista" type="boolean" column="vista" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="fuente" type="bigint" column="fuente" nullable="false">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <many-to-one field="target" target-entity="Usuarios" fetch="LAZY">
      <join-columns>
        <join-column name="target_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
