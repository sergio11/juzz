{% extends 'juzzUsuariosBundle:Usuarios:private/base.html.twig' %} 
{% trans_default_domain 'juzzUsuariosBundle' %}
{% block tabContent %} 
<div class="container">

    {{ render_flash_alerts() }}
    
    <div class="container-card">
        <h2 class="text-center">{{ 'edit.title'|trans }}</h2>

        <div class="row">
            <div class="col-sm-12">
                {{ form(edit_form, { 'action': path('editar_perfil',{user:user.nick}), 'method': 'POST','style': 'horizontal'}) }}
            </div>
        </div>
        
        <div class="row">
            <!-- Darse de baja -->
            <div class="col-xs-12 col-md-6">
                <p>{{ 'edit.low_process.notice'|trans }}&nbsp;<a href="{{ path('low_process',{user:user.nick}) }}" title=''>{{ 'edit.low_process.link'|trans }}</a></p>
            </div>
            <div class="col-xs-12 col-md-6">
                <a data-toggle="modal" class="btn btn-embossed btn-inverse pull-right" href="#changeEmail">
                    <span class="hidden-sm">Cambiar Email</span>
                    &nbsp;{{ icon('envelope') }}
                </a>
                <span class="btn-separator"></span>
                <a data-toggle="modal" class="btn btn-embossed btn-inverse pull-right" href="#changePassword">
                    <span class="hidden-sm">Cambiar Contraseña</span>
                    &nbsp;{{ icon('lock') }}
                </a>
            </div>
        </div>
    </div>
    
</div>

{# Incluimos modal cambio de contraseña #}
{% render(path('change_password_request')) %}
{# Incluimos formulario cambio de email#} 
{% include 'juzzUsuariosBundle:Usuarios:private/partials/change-email.html.twig' %}

{% endblock %}


