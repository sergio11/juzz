{% extends 'juzzUsuariosBundle:Accounts:base.html.twig' %}
{% trans_default_domain 'juzzUsuariosBundle' %}

{% block cardContent %}

{% if invalid_username is defined %}
    <p class="alert alert-danger"><span class="fui-cross-circle"></span>&nbsp;{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
{% endif %}
<form class="form-inline" style="margin: 4rem 0;text-align: center;" action="{{ path('resetting_send_email') }}" method="POST">
  <div class="form-group">
    <label for="nick">{{ 'resetting.request.username'|trans }}</label>
    <input type="text" id="nick" class="form-control" name="nick" required/>
  </div>
  <input type="submit" class="btn btn-default" value="{{ 'resetting.request.submit'|trans }}" />
</form>

{% endblock %}