{% extends 'base.html.twig' %}

{% block main %}
	{% if is_mobile() %} 
		<div class="dropdown mobile-dropdown visible-sm visible-xs">
	    	<a data-toggle="dropdown" class="activador" href="#">Selecciona menu</a>
	    	<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
	        	{% include "juzzUsuariosBundle:Usuarios:profile-nav-options.html.twig" %}
	        </ul>
	    </div>
	{% else %}
		<div class="custom-tabs tabs-style-underline">
			<nav>
				<ul>
	    			{% include "juzzUsuariosBundle:Usuarios:profile-nav-options.html.twig" %}
	    		</ul>
			</nav>
			{# Tab Content #}
	    	{% block tabContent %}{% endblock %}
	
	    </div>
	{% endif %}

	
{% endblock %}