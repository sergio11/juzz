{% form_theme change_email_form 'bootstrap_3_layout.html.twig'%}

<div id="changeEmail" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">Ã—</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Cambia Tu Correo.</h4>
            </div>
            {{ form_start(change_email_form,{'action': path('editar_perfil',{user:user.nick}), 'method': 'POST'}) }}
            <div class="modal-body">
                {{ form_row(change_email_form.email) }}
            </div>
            <div class="modal-footer">
                {{ form_row(change_email_form.cambiar) }}
            </div>
            {{ form_end(change_email_form) }} 
        </div>
    </div>
</div>