{% extends 'HWIOAuthBundle::layout.html.twig' %}

{% block hwi_oauth_content %}
    {% if error is defined and error %}
        <span>{{ error }}</span>
    {% endif %}
    {% set values = {
    	'facebook': {
    		'btn': 'btn-facebook',
    		'icon': 'fui-facebook'
    	},
    	'twitter': {
    		'btn': 'btn-twitter',
    		'icon': 'fui-twitter'
    	}

    } %}
    {% for owner in hwi_oauth_resource_owners() %}
    	<a class="{{ 'btn btn-social ' ~ values[owner]['btn'] }}" rel="nofollow" href="{{ hwi_oauth_login_url(owner) }}">
			<span class="{{values[owner]['icon']}}"></span>{{ owner | trans({}, 'HWIOAuthBundle') }}
		</a>
    {% endfor %}
{% endblock hwi_oauth_content %}
