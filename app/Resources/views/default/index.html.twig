{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bower_components/bootstrap-social/bootstrap-social.css') }}" charset="utf-8">
{% endblock %}

{% block main %}
  <div id="login" data-urlorigin="http://www.ivoox.com/" class="remote-submit modal fade in" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
                <span class="sr-only">Close</span>
              </button>
              <h4 class="modal-title" id="modalLoginLabel">Entra.</h4>
            </div>
            <div class="modal-body">
              <div class="social-buttons row">
                <div class="col-md-12">
                  <a class="btn btn-block btn-social btn-facebook btn-lg" rel="nofollow" href="{{ url('dcs_opauth_connect', {'strategy' : 'facebook'}) }}">
                    <span class="fa fa-facebook"></span> Iniciar Sesión con Facebook
                  </a>
                  <a class="btn btn-block btn-social btn-twitter btn-lg" rel="nofollow" href="{{ url('dcs_opauth_connect', {'strategy' : 'twitter'}) }}">
                    <span class="fa fa-twitter"></span> Iniciar Sesión con Twitter
                  </a>
                  <a class="btn btn-block btn-social btn-google btn-lg" rel="nofollow" href="{{ url('dcs_opauth_connect', {'strategy' : 'google'}) }}">
                    <span class="fa fa-google"></span> Iniciar Sesión con Google +
                  </a>
                </div>
              </div>
              <hr>
              <h5 class="text-center">o también...</h5>
            </div>
        </div>
      </div>
  </div>
  <section class="section section-main flex-block flex-block-full flex-direction-column">
	    <hgroup>
          <h2 class="large">Escucha</h2>
          <h3>lo que te interesa, cuando quieras, donde quieras.</h3>
      </hgroup>
      <form class="main-form-search" autocomplete='off'>
         <div class="buscador-home">
           <input id="words_home" type="search" placeholder="Podcasts, Radio a la carta y en directo, Audiolibros, Conferencias, ... ">
           <button id="searchb_home" class="btn btn-transparent" data-main-item="AUDIO">Buscar</button>
         </div>
      </form>
      <div class="visible-md visible-lg">
        <div class="slide-listas  flex-block flex-block-x-full flex-liquid-content">
          <div class="flex-block flex-block-y-full flex-direction-column flex-liquid-content">
            <img src="http://static-1.ivoox.com/img/dummy/img1.png">
            <img src="http://static-1.ivoox.com/img/dummy/img2.png">
          </div>
          <div>
            <img src="http://static-1.ivoox.com/img/dummy/img3.png">
          </div>
          <div class="flex-block flex-block-y-full flex-direction-column flex-liquid-content">
              <img src="http://static-1.ivoox.com/img/dummy/img4.png">
              <img src="http://static-1.ivoox.com/img/dummy/img5.png">
          </div>
          <div>
             <img src="http://static-1.ivoox.com/img/dummy/img6.png">
          </div>
          <div class="flex-block flex-block-y-full flex-direction-column flex-liquid-content">
              <img src="http://static-1.ivoox.com/img/dummy/img7.png">
              <img src="http://static-1.ivoox.com/img/dummy/img8.png">
          </div>
          <div>
            <img src="http://static-1.ivoox.com/img/dummy/img9.png">
          </div>
          <div class="flex-block flex-block-y-full flex-direction-column flex-liquid-content">
              <img src="http://static-1.ivoox.com/img/dummy/img10.png">
              <img src="http://static-1.ivoox.com/img/dummy/img20.png">
          </div>
          <div>
              <img src="http://static-1.ivoox.com/img/dummy/img11.png">
          </div>
        </div>
	    </div>
	</section>
  <section class="section section-fill-background container-fluid" id='playlists'>
    <h2>¿Qué te interesa?</h2>
    <div class="row">
        {% set column = 2 %}
        {% set groups = categories|length / column | round(0, 'floor') %}
        {% for category_group in categories|batch(groups, false) %}
            <div class="col-md-offset-2 col-md-4">
              <ul class="playlists-list">
              {% for category in category_group if category%}
                <li>
                  <span class="glyphicon glyphicon-menu-right"></span>
                  <a href="{{ url('episodios_categorias', { 'category': category.termino.slug }) }}">{{category.termino.nombre}}</a>
                </li>
              {% endfor %}
              </ul>
            </div>
        {% endfor %}
    </div>
    <div class="section-footer">
        <a href="" class="btn btn-transparent">Explorar todas</a>
    </div>
  </section>
  <section class="section section-fill">
    <div class="container">
      <div class="row">
        <div class="col-md-7 col-sm-6">
          <img src="{{ asset('img/devices.png') }}" class="img-responsive">
        </div>
        <div class="col-md-5 col-sm-6 text-left">
          <h2>Escucha<br><strong>cuando quieras<br>y donde quieras</strong></h2>
          <p class="text-lg">
