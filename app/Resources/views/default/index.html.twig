{% extends 'base.html.twig' %}
{% trans_default_domain 'juzzUsuariosBundle' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bower_components/bootstrap-social/bootstrap-social.css') }}" charset="utf-8">
{% endblock %}

{% block main %}
  <div id="login" data-urlorigin="" class="remote-submit modal fade in" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">Ã—</span>
                <span class="sr-only">Close</span>
              </button>
              <h4 class="modal-title" id="modalLoginLabel">{{"login.modal.header.title"| trans }}</h4>
            </div>
            <div class="modal-body">
              {# Login Form #}
              {% include 'juzzUsuariosBundle:Accounts:form_login.html.twig' %}
            </div> 
            <div class="modal-footer">
                <p class='text-center'>
                    {{"login.modal.footer.alert.text"| trans }}&nbsp;<a href='{{path('register')}}' title='{{"login.modal.footer.alert.link.title"|trans}}' rel="nofollow" data-toggle="tooltip" data-placement="bottom">{{"login.modal.footer.alert.link.text"|trans}}</a>
                </p>
            </div>
        </div>
      </div>
  </div>
  
  {# Main Section #}
  {% include ':default:partials/main-section.html.twig' %}
  
  {# Play List Section #}
  {% include ':default:partials/play-list-section.html.twig' %}
  
  {# Where Section #}
  {% include ':default:partials/where-section.html.twig' %}
  
  {# Create Program Section #}
  {% include ':default:partials/create-program-section.html.twig' %}
  
  {# How Section #}
  {% include ':default:partials/how-section.html.twig' %}
  
{% endblock %}
